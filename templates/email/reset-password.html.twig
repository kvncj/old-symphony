{% extends 'email/_base.html.twig' %}

{% block content %}
<div class="frame">
    <div class="container align-center">
        {#<div class="row text-center">
            <img src="https://partner.pandorabox.com.my/resources/images/pandorabox-brand-bordered-white.png" style="height:48px"/>
        </div>#}
        <div class="row">
            <h2>Reset Password - BARGUS</h2>
        </div>
        <div class="row">
            <span>A password reset has been requested for your Bargus account. You may use the link provided to set a new password.</span>
        </div>
        <div class="row text-center">
            <a href="{{ url('auth_reset', {token: resetToken.token}) }}" class="btn btn-verify">Reset Password</a>
        </div>
        <div class="row">
            This link will expire in 1 hour{#{{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}#}. If you didn't request this, simply ignore this email. Your password won't change until you access the link above and create a new one.
        </div>
    </div>
</div>
{% endblock %}